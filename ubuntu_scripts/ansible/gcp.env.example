# Copy this file to gcp.env and adjust values.
#
# Required tools:
#   - gcloud
#   - (optional) ansible-playbook
#
# Notes:
#   - GCP_BILLING_ACCOUNT_ID looks like: 012345-6789AB-CDEF01
#   - Pick a globally-unique GCP_PROJECT_ID

GCP_PROJECT_ID="bruno-devops-toolbox-ansible-001"
GCP_PROJECT_NAME="devops-toolbox-ansible"
GCP_BILLING_ACCOUNT_ID="REPLACE_ME"

GCP_REGION="us-central1"
GCP_ZONE="us-central1-a"

# VM settings
VM_NAME="ansible-vm-1"
VM_MACHINE_TYPE="e2-micro"
VM_IMAGE_FAMILY="ubuntu-2404-lts-amd64"
VM_IMAGE_PROJECT="ubuntu-os-cloud"
VM_DISK_SIZE_GB="20"

# Network tag used by firewall rules
VM_NETWORK_TAGS="ansible-target"

# SSH access
SSH_USERNAME="bruno"
# Optionally specify a public key path; default is ~/.ssh/id_ed25519.pub then ~/.ssh/id_rsa.pub
# SSH_PUBKEY_PATH="$HOME/.ssh/id_ed25519.pub"

# Restrict SSH exposure to your IP if desired
# ALLOW_SSH_CIDR="YOUR_PUBLIC_IP/32"

# Optional: If you want to auto-run Ansible with tailscale already authorized
# TAILSCALE_AUTH_KEY="tskey-auth-..."

# By default, these are disabled on cloud VM because they reference a LAN NAS (192.168.0.189)
ANSIBLE_ENABLE_NAS_MOUNT="false"
ANSIBLE_ENABLE_DOCKER_STACKS="false"

# Optional: inventory alias name
# INVENTORY_HOST_ALIAS="gcp-vm"
